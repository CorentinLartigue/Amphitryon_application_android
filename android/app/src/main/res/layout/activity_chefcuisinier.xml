<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuChefCuisinier">
        <ImageView
            android:id="@+id/accueil"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/accueil"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/textIdentification"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accueil" />

        <Button
            android:id="@+id/btnLesPlats"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Les plats"
            android:textSize="18dp"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textIdentification" />

        <Button
            android:id="@+id/btnLesServices"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Les services"
            android:textSize="18dp"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnLesPlats" />


        <Button
            android:id="@+id/buttonQuitterMenuChefCuisinier"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Quitter"
            android:textSize="18dp"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnLesServices" />


</androidx.constraintlayout.widget.ConstraintLayout>

