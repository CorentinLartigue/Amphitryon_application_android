<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp">
    <ImageView
        android:id="@+id/accueil"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/accueil"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextNomPlat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="Nom du plat"
        app:layout_constraintTop_toBottomOf="@id/accueil"/>

    <EditText
        android:id="@+id/editTextDescriptionPlat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description du plat"
        android:layout_marginTop="32dp"
        android:inputType="textMultiLine"
        android:minLines="3"
        app:layout_constraintTop_toBottomOf="@id/editTextNomPlat"/>


    <Spinner
        android:id="@+id/CategoriesPlats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/editTextDescriptionPlat"/>


    <Button
        android:id="@+id/CreerPlat"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="CrÃ©er Nouveau Plat"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="18dp"

        app:layout_constraintTop_toBottomOf="@id/CategoriesPlats"/>/>


    <Button
        android:id="@+id/buttonQuitterAjouterPlat"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="QUITTER"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/CreerPlat" />

</LinearLayout>

