<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/accueil"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/accueil" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom du plat"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="28dp"/>
    <EditText
        android:id="@+id/editTextNomPlat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom du plat" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description du plat"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="28dp"/>
    <EditText
        android:id="@+id/editTextDescriptionPlat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description du plat"
        android:inputType="textMultiLine"
        android:minLines="3" />

    <Spinner
        android:id="@+id/CategoriesLePlat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/ModifierPlat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Modifier Plat"
        android:textSize="18dp"

        android:layout_gravity="center"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/buttonQuitterModifierPlat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="QUITTER"
        android:textSize="18dp"

        android:layout_gravity="center"
        android:layout_margin="10dp" />

</LinearLayout>
